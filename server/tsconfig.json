{
  "compilerOptions": {
    "target": "es2016",
    "rootDir": "./src",
    "outDir": "./public",
    "module": "commonjs",
    "types": ["node"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "strictNullChecks": true
  }
}